{
  "name": "player-piano",
  "version": "0.1.0",
  "description": "A virtual player piano with generated minimalist counterpoint music",
  "main": "dist/server/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "ts-node-dev --respawn --transpile-only src/server/index.ts",
    "dev:client": "vite",
    "dev:visual": "vite --config vite.visual.config.ts",
    "dev:all": "concurrently \"npm run dev:server\" \"npm run dev:client\" \"npm run dev:visual\"",
    "start": "node dist/server/index.js",
    "test": "jest",
    "test:e2e": "cypress run",
    "cypress:open": "cypress open",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "docs": "typedoc"
  },
  "keywords": [
    "piano",
    "midi",
    "music",
    "generative",
    "web-audio"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1"
  },
  "devDependencies": {
    "@types/express": "^5.0.2",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.15.21",
    "@types/socket.io": "^3.0.2",
    "@types/socket.io-client": "^3.0.0",
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@typescript-eslint/parser": "^8.32.1",
    "concurrently": "^9.1.2",
    "eslint": "^9.27.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.0",
    "jest": "^29.7.0",
    "prettier": "^3.5.3",
    "ts-jest": "^29.3.4",
    "ts-node-dev": "^2.0.0",
    "typedoc": "^0.28.4",
    "typescript": "^5.8.3",
    "vite": "^6.3.5"
  }
}
