{
  "name": "player-piano",
  "version": "0.1.0",
  "description": "A virtual player piano with generated minimalist counterpoint music",
  "main": "dist/server/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "ts-node-dev --respawn --transpile-only src/server/index.ts",
    "dev:client": "vite",
    "dev:visual": "vite --config vite.visual.config.ts",
    "dev:all": "concurrently \"npm run dev:server\" \"npm run dev:client\" \"npm run dev:visual\"",
    "start": "node dist/server/index.js",
    "test": "jest",
    "test:e2e": "cypress run",
    "cypress:open": "cypress open",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "docs": "typedoc"
  },
  "keywords": [
    "piano",
    "midi",
    "music",
    "generative",
    "web-audio"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "socket.io": "^4.7.2",
    "socket.io-client": "^4.7.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.22",
    "@types/jest": "^29.5.7",
    "@types/node": "^20.17.50",
    "@types/socket.io": "^3.0.1",
    "@types/socket.io-client": "^1.4.36",
    "@typescript-eslint/eslint-plugin": "^6.9.1",
    "@typescript-eslint/parser": "^6.9.1",
    "concurrently": "^8.2.2",
    "eslint": "^8.52.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "jest": "^29.7.0",
    "prettier": "^3.0.3",
    "ts-jest": "^29.1.1",
    "ts-node-dev": "^2.0.0",
    "typedoc": "^0.25.3",
    "typescript": "^5.2.2",
    "vite": "^6.3.5"
  }
}
