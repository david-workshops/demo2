{
  "name": "piano-project",
  "version": "1.0.0",
  "description": "A piano project with minimalist counterpoint music generation",
  "main": "dist/server/index.js",
  "scripts": {
    "build": "npm run build:server && npm run build:client",
    "build:server": "tsc",
    "build:client": "webpack",
    "start": "node dist/server/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/server/index.ts",
    "start:dev": "concurrently \"npm run build:watch\" \"npm run dev\"",
    "build:watch": "concurrently \"tsc -w\" \"webpack --watch\"",
    "lint": "eslint . --ext .ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "prepare": "./scripts/install-hooks.sh",
    "docs": "typedoc",
    "docs:serve": "npx http-server docs",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "piano",
    "midi",
    "music",
    "counterpoint"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "socket.io": "^4.7.2",
    "socket.io-client": "^4.8.1",
    "tone": "^14.7.77",
    "webmidi": "^3.1.6"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "concurrently": "^9.1.2",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.3.4",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typedoc": "^0.28.4",
    "typescript": "^5.3.2",
    "webpack": "^5.99.9",
    "webpack-cli": "^6.0.1"
  }
}
