{
  "name": "piano-project",
  "version": "1.0.0",
  "description": "A piano project with minimalist counterpoint music generation",
  "main": "dist/server/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/server/index.ts",
    "start:dev": "concurrently \"npm run build:watch\" \"npm run dev\"",
    "build:watch": "tsc -w",
    "lint": "eslint . --ext .ts",
    "test": "echo \"No tests specified\" && exit 0"
  },
  "keywords": [
    "piano",
    "midi",
    "music",
    "counterpoint"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "socket.io": "^4.7.2",
    "tone": "^14.7.77",
    "webmidi": "^3.1.6"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "@types/socket.io-client": "^1.4.36",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "concurrently": "^9.1.2",
    "eslint": "^8.54.0",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.2"
  }
}
